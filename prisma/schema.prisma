model University {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  website      String?
  image        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  scholarships Scholarship[]
  users        User[]
}

enum UserType {
  STUDENT
  UNIVERSITY
  ADMIN
}

// This is your Prisma schema file,
